{
  "name": "restless-http-rest-client",
  "publisher": "Crowbait",
  "displayName": "RESTless - HTTP / REST Client",
  "description": "Integrated, flexible HTTP & REST client",
  "icon": "ressources/icon.png",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "keywords": [
    "api",
    "rest",
    "http",
    "client"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "license": "MIT",
  "preview": true,
  "sponsor": {
    "url": "https://ko-fi.com/crowbait"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crowbait/restless-vscode"
  },
  "bugs": {
    "url": "https://github.com/crowbait/restless-vscode/issues"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "restless-http-rest-client.addCall",
        "title": "Add Request",
        "icon": "$(add)",
        "category": "RESTless"
      },
      {
        "command": "restless-http-rest-client.addFolder",
        "title": "Add Folder",
        "icon": "$(folder)",
        "category": "RESTless"
      },
      {
        "command": "restless-http-rest-client.renameEntry",
        "title": "Rename",
        "icon": "$(pencil)",
        "category": "RESTless"
      },
      {
        "command": "restless-http-rest-client.deleteEntry",
        "title": "Delete",
        "icon": "$(trash)",
        "category": "RESTless"
      },
      {
        "command": "restless-http-rest-client.runCall",
        "title": "Run",
        "icon": "$(run)",
        "category": "RESTless"
      },
      {
        "command": "restless-http-rest-client.editCall",
        "title": "Edit",
        "category": "RESTless"
      },
      {
        "command": "restless-http-rest-client.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "RESTless"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "restless-http-rest-client.editCall",
          "when": "false"
        },
        {
          "command": "restless-http-rest-client.runCall",
          "when": "false"
        },
        {
          "command": "restless-http-rest-client.renameEntry",
          "when": "false"
        },
        {
          "command": "restless-http-rest-client.deleteEntry",
          "when": "false"
        },
        {"command": "restless-http-rest-client.addCall"},
        {"command": "restless-http-rest-client.addFolder"},
        {"command": "restless-http-rest-client.refresh"}
      ],
      "view/title": [
        {
          "command": "restless-http-rest-client.addCall",
          "title": "Add Request",
          "when": "view == restlessHttpRestClientView",
          "group": "navigation"
        },
        {
          "command": "restless-http-rest-client.addFolder",
          "title": "Add Folder",
          "when": "view == restlessHttpRestClientView",
          "group": "navigation"
        },
        {
          "command": "restless-http-rest-client.refresh",
          "title": "Refresh",
          "when": "view == restlessHttpRestClientView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "restless-http-rest-client.addCall",
          "title": "Add Request",
          "when": "view == restlessHttpRestClientView && viewItem == folder",
          "group": "inline"
        },
        {
          "command": "restless-http-rest-client.addFolder",
          "title": "Add Folder",
          "when": "view == restlessHttpRestClientView && viewItem == folder",
          "group": "inline"
        },
        {
          "command": "restless-http-rest-client.deleteEntry",
          "title": "Delete Request",
          "when": "view == restlessHttpRestClientView",
          "group": "inline"
        },
        {
          "command": "restless-http-rest-client.renameEntry",
          "title": "Rename Request",
          "when": "view == restlessHttpRestClientView",
          "group": "inline"
        },
        {
          "command": "restless-http-rest-client.runCall",
          "title": "Run",
          "when": "view == restlessHttpRestClientView && viewItem == call",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "restlessHttpRestClient",
          "title": "RESTless",
          "icon": "ressources/icon.svg"
        }
      ]
    },
    "views": {
      "restlessHttpRestClient": [
        {
          "id": "restlessHttpRestClientView",
          "name": "RESTless"
        }
      ]
    },
    "viewsWelcome": [
      {
        "id": "restlessHttpRestClientWelcome",
        "name": "RESTless",
        "view": "restlessHttpRestClientView",
        "contents": "Start by creating a folder or request using the buttons at the top."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "check-types": "tsc -p ./ --noEmit",
    "bundle": "node build.js --production",
    "precompile": "npm run lint",
    "compile": "npm run check-types && npm run bundle",
    "compile-debug": "tsc -p ./",
    "deploy": "vsce publish",
    "prepare": "husky",
    "lint": "eslint src --fix"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "^2.10.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "husky": "^9.1.7",
    "typescript": "^5.6.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@vscode-elements/elements": "^1.8.0",
    "@vscode/codicons": "^0.0.36",
    "parse-dotenv": "^2.1.0"
  }
}
